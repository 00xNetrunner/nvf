{
  pkgs,
  config,
  lib,
  ...
}:
with lib; {
  config = {
    vim.statusline.lualine = {
      enable = mkDefault false;
      icons = mkDefault true;
      theme = mkDefault "auto";
      sectionSeparator = {
        left = mkDefault "";
        right = mkDefault "";
      };

      componentSeparator = {
        left = mkDefault "⏽";
        right = mkDefault "⏽";
      };

      activeSection = {
        a = mkDefault "{'mode'}";
        b = mkDefault ''
          {
            {
            "filename",
            color = {bg='none'}
            },
          }
        '';
        c = mkDefault ''
          {
            {
              "branch",
              icon = ''
            },
          }
        '';
        x = mkDefault ''
          {
            {
              "diagnostics",
              sources = {'nvim_lsp'},
              separator = '',
              symbols = {error = '', warn = '', info = '', hint = ''}
            },
          }
        '';
        y = mkDefault ''
          {
            {
              "fileformat",
              color = {bg='none'}
            },
          },
        '';
        z = mkDefault ''
          {
            {
              "progress",
              color = {bg='none'}
            },
            "location",
            {
              "filetype",
              color = {
                bg='none',
                fg='lavender'
              },
            },
          }
        '';
      };

      inactiveSection = {
        a = mkDefault "{}";
        b = mkDefault "{}";
        c = mkDefault "{'filename'}";
        x = mkDefault "{'location'}";
        y = mkDefault "{}";
        z = mkDefault "{}";
      };
    };
  };
}
